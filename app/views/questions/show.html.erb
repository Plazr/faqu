<p id="notice"><%= notice %></p>

<p>
  <b>Category:</b>
  <%= @question.category.description %>
</p>

<p>
  <b>Question:</b>
  <%= @question.question %>
</p>

<p>
  <b>Answer:</b>
  <%= @question.answer %>
</p>

<% if admin %>
      <td><%= link_to 'Edit', edit_question_path(@question) %></td>
      <td><%= link_to 'Destroy', @question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>

<%= link_to 'Back', questions_path %>
